{
    "manifest_version": 3,
    "name": "Clarity for Facebook",
    "version": "1.0.0",
    "description": "Clean up your Facebook feed by removing unwanted content like Reels, sponsored posts, and suggestions.",
    "author": "Swe TranQuang",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        },
        "default_title": "Clarity for Facebook",
        "browser_style": false
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.facebook.com/*",
                "*://*.fb.com/*"
            ],
            "css": [
                "content.css"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start",
            "all_frames": false
        }
    ],
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://*.facebook.com/*",
        "*://*.fb.com/*"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "clarity-for-facebook@swe-tranquang.com",
            "strict_min_version": "109.0"
        }
    }
}